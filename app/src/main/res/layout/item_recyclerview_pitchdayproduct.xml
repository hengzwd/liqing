<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_recyclerview_pitchoverproof_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="@dimen/card_Corner_Radius"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dayproduct_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">


            <TextView
                android:id="@+id/tv_dayproduct_riqi"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_dayproduct_shigongzhuanghao"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:singleLine="true" />


            <TextView
                android:id="@+id/tv_dayproduct_xinghao"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_dayproduct_chanliang"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:singleLine="true" />


            <TextView
                android:id="@+id/tv_dayproduct_xiuzhengchanliang"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_dayproduct_shejihoudu"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_dayproduct_houdu"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:singleLine="true" />


            <TextView
                android:id="@+id/tv_dayproduct_changdu"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:singleLine="true" />


            <TextView
                android:id="@+id/tv_dayproduct_kuandu"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_dayproduct_midu"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_dayproduct_panshu"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:singleLine="true" />

        </GridLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>